                     </items>
                  </Menu>
                  <Menu text="Edit">
                     <items>
                        <MenuItem text="Copy" />
                        <MenuItem text="Cut" />
                        <MenuItem text="Paste" />
                     </items>
                  </Menu>
                  <Menu text="View">
                     <items>
                        <MenuItem text="Daily" />
                        <MenuItem text="Monthly" />
                        <MenuItem text="Yearly" />
                     </items>
                  </Menu>
                  <Menu text="Help">
                     <items>
                        <MenuItem disable="true" text="Search" />
                        <MenuItem text="Online Manual" visible="false" />
                        <SeparatorMenuItem />
                        <MenuItem text="About" />
                     </items>
                  </Menu>
