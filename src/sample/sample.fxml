                     <String fx:value="Health/Wellness" />
                     <String fx:value="Clothing" />
                     <String fx:value="Payments" />
                     <String fx:value="Furniture" />
                     <String fx:value="Other" />
                  </FXCollections>
               </items>
            </ComboBox>
            <TextField fx:id="amount" layoutX="317.0" layoutY="36.0" promptText="Amount" />
            <TextField fx:id="notes" layoutX="317.0" layoutY="75.0" promptText="Notes" />
            <Button fx:id="update" layoutX="231.0" layoutY="112.0" mnemonicParsing="false" onAction="#updateNow" text="Update" />
            <Circle id="connectionIndicator" fill="#cd1808" layoutX="11.0" layoutY="141.0" radius="5.0" stroke="BLACK" strokeType="INSIDE" />
         </children>
      </AnchorPane>
   </children>
